{
  "name": "json-cat",
  "displayName": "JSON-Cat",
  "author": {
    "name": "sumneko"
  },
  "description": "Language server for JSON",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sumneko/json-cat"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "json-cat.hover.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable hover"
        },
        "json-cat.hover.showStringLength": {
          "type": "boolean",
          "default": true,
          "description": "Show length of string"
        },
        "json-cat.hover.arrayIndexBase": {
          "type": "number",
          "default": 0,
          "enum": [0, 1, 0.5],
          "description": "Base of array index",
          "enumDescriptions": [
            "Array indices represent offsets in memory, and the first item should be 0.",
            "Array indices indicate the position of an element within the array, and starting from 1 would be more intuitive.",
            "How about we compromiseâ€¦"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  }
}
